<div class="container">
  <h4>Employee Communications</h4>
  <div class="row">
    <div class="setting">
      <div class="col-md-6">
        <h5>
          Automatic Notifications<br />
          <small>
            Automatically send employees notifications on your behalf when they are added to your roster, when open enrollment periods occur, when you change company-wide employee settings.
          </small>
        </h5>
      </div>
      <div class="col-md-6 text-center">
        {{bound-toggle theme="squish" value=model.automaticEmailNotifications}}
      </div>
    </div>
  </div>

  {{#liquid-if model.isDirty}}
    <hr />
    <div class="form-group">
      <button type="button" class="btn btn-success btn-block" {{action "saveChanges"}}>Save Changes</button>
    </div>
  {{/liquid-if}}
</div>
