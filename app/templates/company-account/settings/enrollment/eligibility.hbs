<section class="setting-section">
  <h4 class="section-title">
    <i class="fa fa-calendar"></i> Eligibility
  </h4>
  <hr />

  <form class="form-inline" {{action "saveChanges"}}>
    <div class="form-group setting">
      Newly Hired Employees are eligible for coverage the first of the month following
      {{form-input class="input-sm" type="number" placeholder="days"}} days
    </div>
    <div class="form-group setting">
      Existing, Newly Requirement-Met Employees are eligible for coverage the first of the month following
      {{form-input class="input-sm" type="number" placeholder="days"}} days
    </div>
    <div class="form-group form-group-block">
      <button type="submit" class="btn btn-success btn-block">Save Changes</button>
    </div>
  </form>
</section>
