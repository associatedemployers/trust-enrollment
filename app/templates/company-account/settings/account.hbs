<div class="container">
  <section class="setting-section">
    <h4 class="section-title"><i class="fa fa-lock"></i> Change your password</h4>
    <hr />
    <p class="text-muted text-center">
      For your security, you may want to change your password routinely and/or when employees leave that previously had access to this panel.
    </p>
    <form {{action "changePassword" on="submit"}}>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            {{form-input type="password" value=newPassword placeholder="New Password"}}
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            {{form-input type="password" value=newPasswordConfirm placeholder="Confirm your New Password"}}
          </div>          
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-warning btn-block" disabled={{notAllowChangePassword}}>
          Change Password
        </button>
      </div>
    </form>
  </section>
  <section class="setting-section">
    <h4 class="section-title"><i class="fa fa-at"></i> Change your email</h4>
    <hr />
    <form {{action "changeEmail" on="submit"}}>
      <div class="form-group">
        {{form-input type="email" value=model.email}}
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block" disabled={{notAllowChangeEmail}}>
          Change Email
        </button>
      </div>
    </form>
  </section>
</div>
