<div class="enrollment-card container">
  <h2>
    We've Got You Covered.<br />
    <small>
      Select Your Medical Coverage
    </small>
  </h2>
  <hr />

  <div class="plan-selection-list list-group">
    <a href="#" class="list-group-item item-danger" {{action "waiveCoverage"}}>
      <h3 class="text-center"><i class="fa fa-fw fa-minus-square"></i> I want to waive medical coverage</h3>
    </a>

    <a href="#" class="list-group-item" {{action "selectCoverage"}}>
      <div class="row">
        <div class="col-md-4">
          <h3 class="plan-title">ChoiceCare</h3>
          <ul class="plan-details">
            <li>
              $2000
              <h6 class="detail-title">Deductible</h6>
            </li>
            <li>
              70/30
              <h6 class="detail-title">Co-Insurance</h6>
            </li>
          </ul>
        </div>
        <div class="col-md-8">
          <ul class="plan-costs">
            <li>
              <h4>
                Contribution<small>&ast;</small>
                <i class="fa fa-fw fa-question-circle tooltip-trigger" data-html="true" title="Your employer's <strong>estimated</strong> contribution to the plan cost"></i>
              </h4>
              <ul class="plan-costs-list">
                <li>You</li>
                <li>You and Spouse</li>
                <li>You and Children</li>
                <li>You and Family</li>
              </ul>
            </li>
            <li class="callout-cost">
              <h4>
                Cost<small>&ast;</small>
                <i class="fa fa-fw fa-question-circle tooltip-trigger" data-html="true" title="Your <strong>estimated</strong> cost after employer contributions"></i>
              </h4>
              <ul class="plan-costs-list">
                <li>You</li>
                <li>You and Spouse</li>
                <li>You and Children</li>
                <li>You and Family</li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </a>

  </div>
</div>

