<div class="meshed-overlay"></div>
<div class="login-background"></div>

<div class="card pad">
  <div class="card-title">
    <h1>Log in or Enroll</h1>
  </div>
  <div class="card-dialog">
    <form class="login-form" {{action "login" on="submit"}}>
      <div class="form-group left-inner-addon right-inner-text-addon">
        {{input type="password" class="form-control" value=ssn placeholder="Enter Your SSN"}}
        <span class="text-addon-right {{if ssnIsValid 'success' 'danger'}}">
          {{ssnFormatted}}
          {{#if ssnIsValid}}
            <i class="fa fa-fw fa-check"></i>
          {{/if}}
        </span>
        <i class="fa fa-fw fa-lock text-addon-left"></i>
      </div>

      {{error-display prefix="Error logging in" message=loginError bg=false}}

      <div class="hide-slide {{if ssnIsValid 'show'}}">
        <button type="submit" class="btn btn-success btn-block" disabled={{loginIsNotValid}}>
          Log in{{#if loggingIn}}<i class="fa fa-fw fa-spin fa-spinner"></i>{{/if}}
        </button>
      </div>
    </form>
  </div>
</div>

{{outlet}}
