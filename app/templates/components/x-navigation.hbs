<div class="container-fluid">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#trust-nav">
      <span class="sr-only">Toggle navigation</span>
      <i class="fa fa-bars"></i>
    </button>
    <div {{bind-attr class=":logo-container onIndex:show-trust-text"}}>
      {{#link-to 'index' class="logo navbar-brand"}}{{/link-to}}
      <span class="trust-text">Trust Enrollment</span>
    </div>
  </div>

  <div class="collapse navbar-collapse" id="trust-nav">
    <ul class="nav navbar-nav navbar-right">
      {{#if session.authenticated}}
        <li class="dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            {{#if session.content.isCompany}}
              {{session.currentUser.companyName}}
            {{else}}
              Hello, {{session.currentUser.firstName}}
            {{/if}}
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              {{#if session.content.isEmployee}}
                {{#link-to 'employee-account'}}My account{{/link-to}}
              {{else}}
                {{#link-to 'company-account'}}Account{{/link-to}}
              {{/if}}
              </li>
            <li><a href="#" {{action "logout"}}>Log out</a></li>
          </ul>
        </li>
      {{else}}
        <li class="dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            Login <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>{{#link-to 'employee-login'}}Employees{{/link-to}}</li>
            <li>{{#link-to 'company-login'}}Companies{{/link-to}}</li>
          </ul>
        </li>
      {{/if}}
      <li>
        {{#link-to 'support'}}<i class="fa fa-fw fa-life-ring"></i> Get Help{{/link-to}}
      </li>
    </ul>
  </div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
