<div class="list-group-item dependent">
  <div class="row">
    {{#with data}}
      <div class="col-md-4">
        <h4>
          {{fullName}}<br />
          <small>{{contextualRelationship}}<br />{{dob}}</small>
        </h4>
      </div>
      <div class="col-md-4">
        {{#if additionalProvider}}
          Covered by {{additionalProvider}}
        {{/if}}
      </div>
      <div class="col-md-4 dependent-item-controls">
        <a href="#" {{action "toggleProperty" "showingDetails"}}>
          <i {{bind-attr class=":fa :fa-fw showingDetails:fa-angle-up:fa-angle-down showingDetails:active"}}></i>
        </a>
        <a href="#" {{action "toggleProperty" "isEditing"}}>
          <i {{bind-attr class=":fa :fa-fw :fa-edit showingDetails:active"}}></i>
        </a>
        <a href="#" {{action "toggleProperty" "confirmDelete"}}>
          <i {{bind-attr class=":text-danger :fa :fa-fw :fa-trash-o confirmDelete:active"}}></i>
        </a>
      </div>
    {{/with}}
  </div>
</div>