<div class="row text-center">
  <div class="col-md-3">
    <div class="form-inline form-group">
      {{view Ember.Select class="form-control" content=years value=enrollment.dob_year prompt="YYYY"}}
      {{view Ember.Select class="form-control" content=months value=enrollment.dob_month prompt="MM"}}
      {{view Ember.Select class="form-control" content=days value=enrollment.dob_day prompt="DD" disabled=noDays}}
      <p class="help-block">Date of Birth</p>
    </div>
  </div>
  <div class="col-md-3">
    {{#validation-wrapper formgroup=true valid=validity.gender}}
      {{view Ember.Select class="form-control" content=genders value=enrollment.gender prompt="Gender"}}
      <p class="help-block">Gender</p>
    {{/validation-wrapper}}
  </div>
  <div class="col-md-3">
    {{#validation-wrapper formgroup=true valid=validity.marital}}
      {{view Ember.Select class="form-control" content=marital_statuses value=enrollment.marital prompt="Marital Status"}}
      <p class="help-block">Marital Status</p>
    {{/validation-wrapper}}
  </div>
  <div class="col-md-3">

  </div>
</div>